<% content_for :title, "Multi downloader" %>

<div class="m-auto flex items-center flex-col">
  <h1 class="font-extrabold text-4xl">
    Rails Multi-downloader
  </h1>
  <div class="mt-8 w-full">
    <%= form_with url: process_urls_path, method: :post, class: "w-full" do |f| %>
      <%= f.text_area :urls,
        class: "w-full h-40 p-4 bg-gray-800 text-white border border-gray-700 rounded-lg focus:outline-none focus:border-blue-500 resize-none",
        placeholder: "Enter your URLs here, one per line..." %>
      <%= f.submit "Process URLs", class: "mt-4 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
    <% end %>
  </div>
  <%= turbo_frame_tag "download_progress" do %>
    <!-- Progress bars will be inserted here -->
  <% end %>
</div>